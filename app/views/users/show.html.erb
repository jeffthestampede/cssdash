<div class="grid_12">
  <div class="icon">
    <%= image_tag ("reset_arrow.png") %>
  </div>
  <p class="pg_title"> hello </p>
  <div class="rule"></div>

  <div class="grid_3">
    <div class="profile_img">
      <%= image_tag avatar_url(@user) %>
    </div>
    <p>
      <p class="form_title">Username:</p>
      <%= @user.username %>
    </p>
    <p>
      <p class="form_title">Bio:</p>
      <%= @user.bio %>
    </p>
    <p>
      <p class="form_title">Twitter:</p>
      <%= @user.twitter_link %>
    </p>
    <p>
      <p class="form_title">Github:</p>
      <%= @user.github_link %>
    </p>
    <p>
      <p class="form_title">Dribble:</p>
      <%= @user.dribbble_link %>
    </p>
  </div>
  <div class="grid_8" style="margin-left:20px">
    <p class="form_title">Contributions</p>

    <div id="content_container">
  <% @contents.each do |content| %>
  <div class="grid_4 card_container">
    <div class="card">
      <div class="iframe_wrapper">
        <iframe src="<%= url_for :action => "html", :controller => "contents", :id => content.id %>">
        </iframe>
      </div>

      <div class="card_description hidden">
        <%= link_to content.title, content %>
        <p><%= content.description %></p>
        <p>Tags: <%= raw content.tag_list.map { |t| link_to t, tag_path(t)}.join(", ") %></p>
      </div>

      <span class="mini_icons">
        <%= image_tag('eye_icon.svg')%> 23<%= content.views %>
        <%= image_tag('heart_icon.svg')%> 13<%= content.favorites %>
      </span>
    </div>

    <div class="card_header">
      <a href="/users/<%= content.user.id %>"><%= content.user.username %></a>
    </div>
  </div>
  <% end %>
</div>
  </div>
</div>


