<%= render "layouts/navigation" %>
<p>Profile Pic</p>
<p>Username: <%= @user.username %></p>
<p>Bio: <%= @user.bio %></p>
<p>Twitter: <%= @user.twitter_link %></p>
<p>Github: <%= @user.github_link %></p>
<p>Dribble: <%= @user.dribbble_link %></p>

<h1>Contributions</h1>
<div>
<% @contents.each do |content| %>
    <p><%= link_to content.title, content %></p>
    <p>Description: <%= content.description %></p>
    <p>HTML: <%= content.html %></p>
    <p>CSS: <%= content.css %></p>
    <p>Views: <%= content.views %></p>
    <p>Favorites: <%= content.favorites %></p>
    <%#= link_to 'Show', content %>
    <%#= link_to 'Edit', edit_content_path(content) %>
    <%#= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
</div>